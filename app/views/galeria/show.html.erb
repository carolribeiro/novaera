	<section id="blog_content">
		<div class="container">
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
			    <li class="breadcrumb-item"><%= link_to "Galeria", galeria_path %></li>
			    <li class="breadcrumb-item active" aria-current="page"><%= @galerias.legenda %></li>
			  </ol>
			</nav>
			<div class="row">
				<div class="col-lg-8 col-md-8 col-sm-8 content_top wow slideInLeft">
					
					<label class="post_meta">Postado por Join em <%= @galerias.created_at.strftime("%d/%m/%Y") %></label>
					<figure class="figure">
						<%= image_tag(@galerias.foto.to_s, alt: @galerias.legenda, class:"image") %>
						<% if @galerias.fotografo.present? %>
							<figcaption class="figure-caption">
								Foto tirada por: <%= @galerias.fotografo%>
							</figcaption>
						<% end %>
					</figure>
					
				</div>
				
				
			</div>
		</div>
		
	</section> 
	
	
	
	
	