  <section id="rsvp">
		<div class="overlay">
			<div class="container">
				<div class="row">
					<h1>Login</h1>
					<div class="rsvp_wrap">
					  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						  <%= f.email_field :email, :required => true, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
						  <%= f.password_field :password, :required => true, autocomplete: "current-password", placeholder: 'Senha' %>
						  <%= f.submit 'Enviar' %>
						  
						  <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
						  
						<% end %>
						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
  </section> 