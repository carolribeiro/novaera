	<section id="blog_content">
		<div class="container">
			<nav aria-label="breadcrumb">
			  <ol class="breadcrumb">
			    <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
			    <li class="breadcrumb-item"><%= link_to "Notícias", noticias_path %></li>
			    <li class="breadcrumb-item active" aria-current="page"><%= @noticias.titulo %></li>
			  </ol>
			</nav>
			<div class="row">
				<div class="col-lg-8 col-md-8 col-sm-8 content_top wow slideInLeft">
					<h3 class=""><%= @noticias.titulo %></h3> 
					<h4><%= @noticias.subtitulo %></h4> 
					<label class="post_meta">Postado por Join em <%= @noticias.created_at.strftime("%d/%m/%Y") %></label>
					<figure class="figure">
						<%= image_tag(@noticias.foto.to_s, alt: @noticias.titulo, class:"image") %>
						<% if @noticias.fotografo.present? %>
						<figcaption class="figure-caption">
							Foto tirada por: <%= @noticias.fotografo%>
						</figcaption>
						<% end %>
					</figure>
					<p><%= @noticias.texto %></p>
				</div>
				
				<aside class="">
					<h3 class="content_title">Últimas notícias</h3>
					<% @noticia.each do |noticia| %>
						<div class="col-lg-4 col-md-4 col-sm-4">
							<div class="sidebarPost">
								<%= link_to noticias_show_path(id: noticia.id), class:"sidebarPost-link" do %>
						            <div class="sidebarPost-date">
						            	<span class="sidebarPost-date-day"> 
						            		<%= noticia.created_at.strftime("%d") %>
						            	</span>
						            	<span class="sidebarPost-date-month">
						            		<%= noticia.created_at.strftime("%m") %>
						            	</span>
						            </div>
						            <h4 class="sidebarPost-title"> 
						            	<%= noticia.titulo %> 
						            </h4>
						        <% end %>
				            </div>
				        </div>  
					<% end %>
				</aside>	
			</div>
		</div>
		
	</section> 
	
	
	
	
	