	<!-- #blog_content -->
	<section id="blog_content">
		<div class="container">
			<div class="row">
				<div class="content_top wow slideInLeft">
					<label class="post_meta">Posted by <a href="#">Jhone</a> em <%= @noticias.created_at.strftime("%d/%m/%Y") %></label>
					<h2 class="content_title"><%= @noticias.titulo %></h2> 
					<h3><%= @noticias.subtitulo %></h3> 
					<%= image_tag(@noticias.foto.to_s, alt: @noticias.titulo, class:"image") %>
					<p>Foto tirada por: <%= @noticias.fotografo%></p>
					<p><%= @noticias.texto %></p>
				    
				</div>

			</div>
		</div>
	</section> <!-- /#blog_content -->
	
	
	